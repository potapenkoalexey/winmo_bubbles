{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure build",
            "type": "shell",
            "detail": "Calls cmake configure action",
            "windows": {
                "command": "cmake",
                "args": [
                    "..",
                    "-G",
                    "Visual Studio 16 2019"
                ]
            },
            "linux": {
                "command": "cmake",
                "args": [
                    "..",
                    "-G",
                    "Unix Makefiles"
                ]
            },
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": []
        },
        {
            "label": "Build",
            "type": "shell",
            "detail": "BUILD binaries",
            "command": "cmake",
            "args": [
                "--build",
                ".",
                "--config",
                "Release",
                "-j4"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": []
        },
        {
            "label": "Build Installer",
            "type": "shell",
            "detail": "Invokes Installer build action",
            "windows": {
                "command": "cmake",
                "args": [
                    "--build",
                    "${workspaceFolder}/build/",
                    "--target",
                    "installer-win-ALL"
                ],
                "options": {
                    "cwd": "${workspaceFolder}/build/installer_win/output"
                }
            },
            "linux": {
                "command": "cmake",
                "args": [
                    "--build",
                    "${workspaceFolder}/build/",
                    "--target",
                    "package"
                    // "installer-unix-ALL"
                ],
                "options": {
                    "cwd": "${workspaceFolder}/build/installer_unix/output"
                }
            },
            "problemMatcher": []
        },
        {
            "label": "RE-Build Installer",
            "type": "shell",
            "detail": "Invokes Installer REbuild action",
            "windows": {
                "command": "cmake",
                "args": [
                    "--build",
                    "${workspaceFolder}/build/",
                    "--target",
                    "installer-win-ALL"
                ],
                "options": {
                    "cwd": "${workspaceFolder}/build/installer_win/output"
                }
            },
            "linux": {
                "command": "It's unavailable to build Installer for Linux",
                "options": {
                    "cwd": "${workspaceFolder}/build/installer_unix/output"
                },
            },
            
            "dependsOn": "Configure build",
            "problemMatcher": []
        },
        {
            "label": "Build Docs CMake",
            "type": "shell",
            "detail": "Calls cmake docs_target build",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build/docs/",
                "--target",
                "doc_doxygen"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build/docs/output"
            }
        },
        {
            "label": "Build Docs Doxyfile",
            "type": "shell",
            "detail": "Calls build docs from Doxyfile",
            "command": "cmake",
            "args": [
                "-E",
                "env",
                "doxygen",
                "Doxyfile"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build/docs/output"
            },
            "problemMatcher": []
        }
    ]
}