<?xml version="1.0" encoding="UTF-8"?>
<!-- compile command: "%WIX%bin\candle" -arch x64 *.wxs
    link command: "%WIX%bin\light" *.wixobj -o WinMoBubbles.msi
 -->
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">

<?include ProductOut.wxi ?>
<?include VariablesOut.wxi ?>

  <Product Id="$(var.GUID_PRODUCT_CODE)" 
           Name="$(var.ProductName)" 
           Language="1033" 
           Version="$(var.ProductVersion)" 
           Manufacturer="$(var.Manufacturer)" 
           UpgradeCode="$(var.GUID_UPGRADE_CODE)">    
    <Package InstallerVersion="200" Compressed="yes" />

    <Media Id="1" Cabinet="WMWIN.cab" EmbedCab="yes" />

    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />

    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFiles64Folder">
        <Directory Id="INSTALLLOCATION" Name="$(var.ProductName)">
          <Component Id="Component_EXE" Guid="$(var.GUID_COMPONENT_EXE)" Win64="yes">
            <File Id="EXE" DiskId="1" Source="$(var.BIN_FOLDER)\$(var.ProductNameEXE)"/>
          </Component>
        </Directory>
      </Directory>
      <Directory Id="ProgramMenuFolder">
        <Directory Id="ApplicationProgramsFolder" Name="$(var.ProductName)">
          <Component Id="Component_Shortcut" Guid="$(var.GUID_COMPONENT_SHORTCUT)" Win64="yes">
            <Shortcut Id="ShortcutEXE" Name="$(var.ProductName)" Description="$(var.ProductName)"
                      Target="[INSTALLLOCATION]$(var.ProductNameEXE)"
                      WorkingDirectory="INSTALLLOCATION"/>
            <RemoveFolder Id="ApplicationProgramsFolder" On="uninstall"/>
            <RegistryValue Root="HKCU" Key="Software\$(var.Manufacturer)\$(var.ProductName)" 
                           Name="installed" 
                           Type="integer" Value="1" KeyPath="yes"/>
          </Component>
        </Directory>
      </Directory>
    </Directory>

<?include FeaturesOut.wxi ?>

    <!-- <Property Id="WIXUI_INSTALLDIR" Value="INSTALLLOCATION" ></Property> -->
    <!-- <WixVariable Id="WixUILicenseRtf" Overridable="yes" Value="License.rtf"/> -->
    <!-- <UIRef Id="WixUI_InstallDir"/> -->
  </Product>
</Wix>